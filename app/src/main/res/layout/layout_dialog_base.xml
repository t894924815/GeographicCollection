<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_corners_white">


    <ImageView
        android:id="@+id/iv_warnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_warnings"/>

    <TextView
        android:id="@+id/content_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="确定退出？"
        />
    <View
        android:id="@+id/center_flag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_alignEnd="@id/center_flag"
        android:layout_marginEnd="5dp"
        android:background="@drawable/shape_corners_button_grey"
        android:textSize="15sp"
        android:textColor="@color/white"
        tools:text="取消"/>
    <TextView
        android:id="@+id/tv_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_alignStart="@id/center_flag"
        android:layout_marginStart="5dp"
        android:background="@drawable/shape_corners_button_red"
        android:textSize="15sp"
        android:textColor="@color/white"
        tools:text="确定"/>

</RelativeLayout>